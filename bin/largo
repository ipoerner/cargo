usage() {
    echo "Usage: largo (build|help|run)"
}

case $# in
    0)
    usage
    exit 0
    ;;
    *)
    COMMAND=${1}
    case ${COMMAND} in
        build|run)
        shift
        ;;
        help)
        usage
        exit 0
        ;;
        *)
        usage
        exit 1
    esac
    ;;
esac

largo-${COMMAND} "$@"
